@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="card mb-0">
    <div class="card-body">
        @if (Model.GetResponseStatus() != null)
        {
            if (!Model.GetResponseStatus().Status)
            {
                <h3 class="text-center mb-3">Error</h3>
                <h5 class="text-center">@Model.GetResponseStatus().Message</h5>
                <a asp-area=""
                   asp-page="/Index"
                   class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Back to home</a>
            }
        }
    </div>
</div>