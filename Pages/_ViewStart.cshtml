@{
    string? routeUrl = ViewContext.RouteData.Values["Page"]?.ToString();
    var authPages = new List<string> { "Auth" };
    var headQuarterPages = new List<string> { "HeadQuarter" };
    var authModificatinPages = new List<string> { "IndexFirstLogin", "ChangePassword" };
    if (routeUrl != null && authPages.Any(routeUrl.Contains))
    {
        if (authModificatinPages.Any(routeUrl.Contains))
        {
            Layout = "_Layout";
        } else
        {
            Layout = "_LayoutWorkspace";
        }
    }
    else if (routeUrl != null && headQuarterPages.Any(routeUrl.Contains))
    {
        Layout = "_LayoutHeadQuarterWorkspace";
    }else
    {
        Layout = "_Layout";
    }
}
