@page
@model EditProductModel

<h1>Edit Product</h1>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="barcode">Barcode:</label>
        <input type="text" class="form-control" id="barcode" asp-for="Product.Barcode">
        <span asp-validation-for="Product.Barcode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="unitPrice">Unit Price:</label>
        <input type="text" class="form-control" id="unitPrice" asp-for="Product.UnitPrice">
        <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="importPrice">Import Price:</label>
        <input type="text" class="form-control" id="importPrice" asp-for="Product.ImportPrice">
        <span asp-validation-for="Product.ImportPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="retailPrice">Retail Price:</label>
        <input type="text" class="form-control" id="retailPrice" asp-for="Product.RetailPrice">
        <span asp-validation-for="Product.RetailPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" id="category" asp-for="Product.Category">
        <span asp-validation-for="Product.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" asp-for="Product.Description"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
